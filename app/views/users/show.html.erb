<h1>Profile and Payments</h1>
<ul><%= @user.name %></ul>
<ul><%= @user.email %></ul>
<ul>
    <%= link_to 'Edit your profile', edit_user_registration_path( @user ) %>
    <%= link_to 'Edit your payments', user_payments_path( @user ) %>
    <%= link_to 'New payment', new_user_payment_path( @user ) %>
</ul>

<table class = "table">
	<thread>
		<tr>
		<th>Date</th>
		<th>Item</th>
		<th>Cost</th>
		<th colspan="3"></th>
		</tr>
	</thread>
		
	<tbody>
		<% @payments.each do |pay| %>
		<tr>
			<td><%= pay.date %></td>
			<td><%= pay.item %></td>
			<td><%= pay.cost %></td>
		</tr>
		<% end %>
	</tbody>
</table>